#!/bin/bash

# Input CSV file
input_file="yourfile.csv"

# Use awk to process the file
awk -F, '
BEGIN { OFS = "," }
{
    # Replace \n and \r in each field
    for(i = 1; i <= NF; i++) {
        gsub(/\\n|\\r/, "", $i)
    }
    
    # Replace the last column's value with an empty string if it's "description"
    if ($NF == "description") {
        $NF = ""
    }
    
    print
}' "$input_file" > temp.csv

# Overwrite the original file with the modified data
mv temp.csv "$input_file"
