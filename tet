from elasticsearch import Elasticsearch
import requests

def get_disk_usage_from_cerebros(api_url):
    try:
        response = requests.get(api_url)
        response.raise_for_status()

        disk_usage_data = response.json()
        return disk_usage_data.get('disk_usage_percentage')
    except requests.exceptions.RequestException as e:
        print(f"Error retrieving disk usage from Cerebros API: {e}")
        return None

# Example usage:
if __name__ == "__main__":
    cerebros_api_url = 'https://cerebros.example.com/api/v1/disk-usage'

    disk_usage_percentage = get_disk_usage_from_cerebros(cerebros_api_url)

    if disk_usage_percentage is not None:
        print(f"Disk Usage Percentage: {disk_usage_percentage}%")
    else:
        print("Failed to retrieve disk usage information.")
