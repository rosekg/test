import org.apache.log4j.Logger;

public class RuntimeConfig {

    private static final Logger logger = Logger.getLogger(RuntimeConfig.class);

    private String arg1;
    private String arg2;

    public RuntimeConfig(String arg1, String arg2) {
        this.arg1 = arg1;
        this.arg2 = arg2;
    }

    public static RuntimeConfig initializeVariables(String[] args) {
        String arg1 = args.length > 0 ? args[0] : "default1";
        String arg2 = args.length > 1 ? args[1] : "default2";

        logger.info("Runtime arguments initialized: arg1=" + arg1 + ", arg2=" + arg2);
        return new RuntimeConfig(arg1, arg2);
    }

    @Override
    public String toString() {
        return "arg1=" + arg1 + ", arg2=" + arg2;
    }
}
