import subprocess

# Define SSH parameters
hostname = 'your_hostname'
username = 'your_username'

# SSH command to list files in the home directory
ssh_command = f'ssh {username}@{hostname} ls -l ~'

# Execute the SSH command
try:
    result = subprocess.run(ssh_command, shell=True, check=True, stdout=subprocess.PIPE, stderr=subprocess.PIPE, text=True)
    if result.returncode == 0:
        print("Connected to server successfully!")
        print("Files in home directory:")
        print(result.stdout)
    else:
        print("An error occurred:", result.stderr)
except subprocess.CalledProcessError as e:
    print("An error occurred:", e.stderr)
