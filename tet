from elasticsearch import Elasticsearch

# Connect to the Elasticsearch cluster
es = Elasticsearch(["http://your-dev-cluster-url:9200"])

# Disable shard allocation
body = {
  "transient": {
    "cluster.routing.allocation.enable": "none"
  }
}

# Send the update settings request
response = es.cluster.put_settings(body=body)

# Check the response
if response.get("acknowledged", False):
    print("Shard allocation disabled successfully.")
else:
    print("Failed to disable shard allocation.")
