filter {
  ruby {
    code => '
      job_duration = event.get("job_duration")
      avg_runtime = event.get("job_average_run_mins")

      if job_duration && avg_runtime
        if job_duration > avg_runtime
          event.set("flag", -1)
        elsif job_duration == avg_runtime
          event.set("flag", 0)
        else
          event.set("flag", 1)
        end
      end
    '
  }
}
