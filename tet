# Find all files referenced by the main script
referenced_files=$(grep -Eo '\./.+\.sh|\./.+\.conf|\./.+\.properties|\./.+\.csv' "$main_script")

# Write the referenced files to the output file
echo "$referenced_files" > "$output_file"

# Print out the list of files that were written to the output file
echo "The following files were found and written to $output_file:"
echo "$referenced_files"
